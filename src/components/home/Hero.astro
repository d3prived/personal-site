---
import { GLOBAL } from "../../lib/variables";
---

<div class="flex flex-col items-center gap-8">
  <div class="flex flex-col sm:flex-row gap-8 items-center">
    <div>
      <h1
        class="text-4xl sm:text-6xl font-display font-semibold opsz text-center sm:text-left"
      >
        {GLOBAL.username}
      </h1>
      <h2
        class="text-center text-2xl sm:text-4xl font-mono font-medium sm:text-left"
      >
        @<span set:html={GLOBAL.handle}/>
      </h2>
    </div>
  </div>
    <h3
      class="text-center text-lg sm:text-xl font-mono sm:text-left"
    >
      <p set:html={GLOBAL.longDescription}/>
    </h3>
</div>
